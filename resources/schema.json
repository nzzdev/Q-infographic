{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Infografik",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Titel bringt die Kernaussage der Grafik auf den Punkt&#46;"
      }
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Untertitel benennt präzise, was in der Grafik zu sehen ist, inklusive Einheiten&#46;"
      }
    },
    "images": {
      "title": "Grafik als Bild",
      "type": "object",
      "properties": {
        "variants": {
          "title": "Varianten",
          "type": "array",
          "items": {
            "title": "Variante",
            "type": "object",
            "properties": {
              "minWidth": {
                "title": "Mindestbreite in px für diese Variante",
                "type": "number"
              },
              "images": {
                "title": "Bilder",
                "type": "array",
                "items": {
                  "title": "Bild",
                  "type": "object",
                  "Q:type": "files",
                  "Q:options": {
                    "maxFiles": 1,
                    "acceptedFiles": "image/*",
                    "fileProperties": {
                      "url": "url",
                      "key": "key",
                      "width": "width",
                      "height": "height",
                      "size": "size"
                    }
                  }
                }
              }
            }
          },
          "default": [
            {
              "images": [
                {}
              ]
            },
            {
              "minWidth": 500,
              "images": [
                {}
              ]
            }
          ]
        }
      }
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "properties": {
              "url": {
                "title": "Link",
                "type": "string",
                "Q:options": {
                  "placeholder": "Direktlink zur Quelle, http://&#46;&#46;&#46;"
                }
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "options": {
      "title": "Optionen",
      "type": "object",
      "properties": {
        "serveLosslessWebP": {
          "title": "Verlustfreies WebP mitschicken",
          "type": "boolean",
          "default": false
        }
      }
    }
  },
  "required": [
    "title"
  ]
}
